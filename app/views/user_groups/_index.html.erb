<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>グループ名</th>
      <th colspan="3">紹介文</th>
      <th>紹介文</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= attachment_image_tag(group, :group_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <td>
          <% if group.user_group_members.select("is_orner").pluck("is_orner") == [true] %>
              <%= link_to "edit",edit_user_group_path(group),class:"btn btn-info btn-block" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_group_path(group) %></td>

      </tr>
    <% end %>
  </tbody>
</table>
